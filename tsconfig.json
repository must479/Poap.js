{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "target": "es2020",
    "sourceMap": true,
    "baseUrl": "./packages",
    "paths": {
      "moments": ["moments/src"],
      "providers": ["providers/src/*"],
      "drops": ["drops/src"],
      "attributes": ["attributes/src"],
      "types": ["types/src"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./packages/moments" },
    { "path": "./packages/drops" },
    { "path": "./packages/providers" },
    { "path": "./packages/attributes" },
    { "path": "./packages/types" }
  ]
}
